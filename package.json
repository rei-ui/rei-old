  "bugs": {
    "url": "https://github.com/rei-ui/rei/issues"
  },
  "homepage": "https://github.com/rei-ui/rei#readme",
  "dependencies": {
    "@polymer/polymer": "^3.0.5",
    "polymer-cli": "^1.9.8"
  },
  "devDependencies": {
    "@polymer/lit-element": "^0.6.2",
    "@webcomponents/webcomponentsjs": "^2.1.3",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.3",
    "wct-browser-legacy": "^1.0.2"
  }
